@model crudSystem.Models.Employes
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Edit Employee</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <div class="form-group m-3">
                            <label class="d-block text-black" asp-for="firstName"></label>
                            <input type="hidden" asp-for="Id" />
                            <input type="text" asp-for="firstName" class="from-control w-100" placeholder="Enter First Name" />
                        </div>
                        <div class="form-group m-3">
                            <label class="d-block" asp-for="lastName"></label>
                            <input type="text" asp-for="lastName" class="from-control w-100" placeholder="Enter Last Name" />
                        </div>
                        @*-----------------------------------------------------------------------------------------*@
                        <div class="form-group m-3">
                            @Html.LabelFor(model => model.Status,htmlAttributes:new{@class ="control-label col-md-2"})
                            <div class="col-md-10">
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.Status,"True",new{@name ="status"})
                                    True
                                </label>
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.Status,"False",new{ @name ="status"})
                                    False
                                </label>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        @*-----------------------------------------------------------------------------------------*@

                        @*<div class="form-group m-3">
                            <label class="d-block" asp-for="Status"></label>
                            <input type="text" asp-for="Status" class="from-control w-100" placeholder="Enter your status" />
                        </div>*@
                        <div class="form-group m-3">
                            <select class="form-select" asp-for="State" aria-label="Default select example">
                                <option selected>--Selecet State--</option>
                                <option asp-for="State" value="punjab" >punjab</option>
                                <option asp-for="State" value="sindh">sindh</option>
                                <option asp-for="State" value="kpk">kpk</option>
                            </select>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>

                        <div class="form-group m-3">
                            <input class="form-check-input" type="checkbox" value="" id="Checkbox" checked>
                            <label class="form-check-label" for="Checkbox">
                                Checked checkbox
                            </label>
                        </div>

                        @*<div class="form-group m-3">
                            <label class="d-block" asp-for="State"></label>
                            <input type="text" asp-for="State" class="from-control w-100" placeholder="Enter State Name" />
                        </div>*@
                        <div class="form-group w-100">
                            <input type="submit" value="submit" class="btn btn-sm btn-outline-success float-end" />
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
    <div>
        <a class="btn btn-sm btn-primary m-1 float-end" asp-controller="Employe" asp-action="Index">
            Back
        </a>
    </div>
</div>
